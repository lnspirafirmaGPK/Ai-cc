# platform/api/server.py
from core.kernel import Kernel

# สร้าง Provider ที่เชื่อมกับสมองที่คุณออกแบบเอง
class OrolarReasoningProvider:
    def __init__(self):
        self.kernel = Kernel()

    async def reason(self, prompt: str) -> str:
        # ส่งไปให้ Kernel ประมวลผลผ่าน WisdomVault
        return self.kernel.process_input(prompt)

# บังคับให้ระบบใช้ Provider ของเราเองเสมอ
reasoning_provider = OrolarReasoningProvider()